        $(document).ready(function() {
            //문서 전체(body 태그)에 플러그인 적용함
            $('body').vegas({
            slides: [
                //초반이미지 나타나게 함. 주석처리하면 안 나타남
                // {src: '/resource/main_bg.jpg'},
                {
                    //video{}안에 배경 동영상과 옵션값 지정함
            video: {
                //src 속성을 사용해 동영상 지정해 줌
                src: [
                    '/resource/lending_page.mp4'],
                    //loop 속성을 사용해 동영상 반복 여부 지정함
                loop: true,
                //동영상을 무음상태로 만들어 줌
                mute: true
            }
        }
    ]
    });
    });

    
